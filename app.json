{
  "name": "Askbot",
  "description": "An open source Q&A site",
  "website": "https://askbot.com",
  "addons": ["heroku-postgresql:hobby-dev"],
  "env": {
    "SECRET_KEY": {
      "description": "Django secret key",
      "generator": "secret"
    },
    "DJANGO_SETTINGS_MODULE": {
      "description": "Django settings",
      "value": "settings"
    }
  },
  "scripts": {
    "postdeploy": "python manage.py syncdb --noinput && python manage.py makemigrations && python manage.py migrate"
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
